{% extends 'base.html.twig' %}

{% block body %}
    <div id="wrapper">
        <h2>*Posts</h2>
        <p>{{ post.id }}</p>
        <p>{{ post.title }}</p>
        <p>{{ post.content }}</p>

        <h2>Commentaires</h2>

        {% for comment in comments %}
            <p>{{ comment.name }}</p>
        {% else %}
            <p>Aucun commentaire</p>
        {% endfor %}


        {{ form_start(form) }}
        {{ form_widget(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}