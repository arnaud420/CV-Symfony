{% extends 'base.html.twig' %}

{% block body %}
    <section id="category">
        <header>
            <div class="container">
                <div class="row justify-content-center align-items-center">
                    <h1 class="text-uppercase">{{ category.name }}</h1>
                </div>
            </div>
        </header>

        <main class="container section">
            <div class="row">
            {% for post in posts %}
                {% set image = post.images.first %}
                <article id="post-{{ post.id }}" class="col-12 col-md-4">
                    <div class="card">
                        {% if image %}
                            <img class="card-img-top" src="{{asset('uploads/'~image.name)}}" alt="Card image cap">
                        {% endif %}
                        <div class="card-body">
                            <h5 class="card-title text-center">
                                <a href="{{ path('post_show', {'post_id': post.id}) }}">{{ post.title }}</a>
                            </h5>
                        </div>
                    </div>
                </article>
            {% endfor %}
            </div>
        </main>
    </section>
{% endblock %}